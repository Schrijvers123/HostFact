		<language tag="nl-NL">language/nl-NL/nl-NL.plg_system_hostfact.sys.ini</language>
	</languages>
	

	<config>
		<fields name="params">
			<fieldset name="basic">
				
				<field
					name="orderform_url"
					type="url"
					label="PLG_HOSTFACT_FIELD_ORDERFORM_URL_LABEL"
					description="PLG_HOSTFACT_FIELD_ORDERFORM_URL_DESC"
					size="60"
					default=""
					required="true"
				/>
								
			</fieldset>
		</fields>
	</config>
	
	<updateservers>
        <server type="extension" priority="1" name="HostFact for Joomla!"><![CDATA[https://www.schrijvers123.nl/index.php?option=com_ars&view=update&task=stream&format=xml&id=7&dummy=extension.xml]]></server>
