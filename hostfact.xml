	<description>PLG_HOSTFACT_XML_DESCRIPTION</description>
	<files>
		<filename plugin="hostfact">hostfact.php</filename>
		<filename>index.html</filename>
		<filename>hostfact.xml</filename>
	</files>
	
	<media destination="plg_system_hostfact">
